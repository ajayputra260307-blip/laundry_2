#include <iostream>
using namespace std;

int main() {
    string barang[5][3]; // 5 data, 3 kolom: nama barang, jumlah/stok, harga

    cout << "=== Input Data Barang Warung ===" << endl;
    for (int i = 0; i < 5; i++) {
        cout << "Barang ke-" << i + 1 << endl;
        cout << "Nama Barang: ";
        cin >> barang[i][0];
        cout << "Jumlah/Stok: ";
        cin >> barang[i][1];
        cout << "Harga: ";
        cin >> barang[i][2];
        cout << endl;
    }

    cout << "\n=== Daftar Barang di Warung ===" << endl;
    cout << "Nama Barang\tStok\tHarga" << endl;
    for (int i = 0; i < 5; i++) {
        cout << barang[i][0] << "\t\t" << barang[i][1] << "\t" << barang[i][2] << endl;
    }

    return 0;
}
